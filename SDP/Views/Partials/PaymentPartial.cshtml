@{
}
@{
    ViewBag.Title = "Create";
}
@model SDPCore.Models.AccountModel.Key
<form asp-action="Payment" asp-controller="Payment" method="POST">
    <input asp-for="publicKey" name="publicKey" value="@Model.publicKey" type="hidden" />
    <input asp-for="amount" name="amount" value="@Model.amount" type="hidden" />
    <input asp-for="descirption" name="descirption" value="@Model.descirption" type="hidden" />
    <input asp-for="currency" name="currency" value="@Model.currency" type="hidden" />
    
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key=@Model.publicKey
            data-locale="auto"
            data-description=@Model.descirption
            data-amount=@Model.amount >
    </script>
</form>
