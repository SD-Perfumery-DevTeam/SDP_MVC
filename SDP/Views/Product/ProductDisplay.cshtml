
@{
    string iD = (string)ViewData["ProductID"];
    SDP.Models.Product product = SDP.Services.ViewService.getProductFromDB(iD); ;

}
<head>
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/productpage-style.css" rel="stylesheet">
</head>



<div class="container">
    <div class="row">
        <div class="col-8">
            <img src="~/imgs/@product.imgSrc" alt="..." style="height: 100%; width: 100%;">
        </div>
        <div class="col-4">
            <h3>@product.name by @product.brand @product.size ml </h3>
            <div class="space"></div>
            <span class="price-text">Price</span><span class="price-val">@product.price LKR</span>
            <p>
