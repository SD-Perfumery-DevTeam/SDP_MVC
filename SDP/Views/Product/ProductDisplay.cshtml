
@{
    string iD = (string)ViewData["ProductID"];
   @model SDP.Models.Product

}

<!-- Duplicate <head> removed (redundant) -->

<div class="container">
    <div class="row">
        <div class="col-8">
            <img src="~/imgs/@Model.imgUrl" alt="@Model.title by @Model.brand" />
        </div>
        <div class="col-4">
            <h2>@Model.title</h2><!-- Add dynamic UoM here -->
            <span>@Model.brand @Model.packageQty ml</span>
            <span class="price-text">Price</span><span class="price-val">@Model.price LKR</span>
            <p>
                @Model.description
            </p>
            <form method="post" asp-controller="Product" asp-action="AddToCart">
                <span class="quan-text">Quantity</span><input name="quantity" type="number" value=1>
                <div>
                    <button type="submit">Add ToCart</button>
                </div>
            </form>
        </div>
    </div>
</div>