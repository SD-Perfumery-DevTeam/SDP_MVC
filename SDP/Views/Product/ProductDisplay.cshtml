@{
    ViewData["Title"] = Model.product.title + " by " + Model.brand.title;
    string iD = (string)ViewData["ProductID"];
    @model SDP.ViewModels.Catalog
}

<div id="section-product-display">
    <div class="container">
        <h2>@Model.product.title</h2>
        <p>@Model.brand.title</p>
        <img src="~/imgs/@Model.product.imgUrl" alt="@Model.product.title by @Model.brand.title" />
        <p>@Model.product.description</p>
        <p>@Model.product.productType</p>
        <p>@Model.product.productGender</p>
        <p>Size: @Model.product.packageQty@Model.product.packageUom</p>
        <p>Rs. @Model.product.price</p>
        <form method="post" asp-controller="Product" asp-action="AddToCart">
            <span class="quan-text">Quantity </span><input name="quantity" type="number" value=1><button type="submit">Add To Cart</button>
        </form>
    </div>
</div>
<div id="section-suggested">
    <div class="container">
        <h3>Recommended Fragrances</h3>
    </div>
</div>
