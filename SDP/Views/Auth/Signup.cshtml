<!--Sign Up Form ======================================================================-->
<div class="container">
    <form>
        <h2>Sign Up</h2>
        <table>
            <tr>
                <td>Username</td>
                <td><input type="text" placeholder="Username"></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password" placeholder="Password"></td>
            </tr>
            <tr>
                <td>Confirm Password</td>
                <td><input type="password" placeholder="Password"></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="email" placeholder="Confirm Password"></td>
            </tr>
            <tr>
                <td><input class="btn-primary" type="submit" value="Sign Up"></td>
            </tr>

        </table>


    </form>
</div>
