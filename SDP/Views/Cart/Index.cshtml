
@model SDP.Models.Cart
@{
    SDP.Interfaces.ICustomer cutomer = SDP.Services.ViewService.getCustomerFromDB((string)ViewData["Id"]);
    decimal total = 0;
}
<head>
    <link href="~/css/cart-style.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<div class="container">
    <div class="title">
        <h1>SD Perfumery</h1>

    </div>

    <div class="shopping-cart">
        <div class="sort">
            <div>
                @if (cutomer != null)
                {
                    foreach (SDP.Models.Product product in cutomer.cart.getProductListWithCount())
                    {
                        total = total + (decimal)product.price * (decimal)product.count;
                        decimal subTotal = product.price * product.count;
                        <div class="product">
                            <div class="row">
                                <div class="col-3"><img src="~/imgs/@product.imgUrl" alt="..." height="100px" width="100px" /></div>
                                <div class="col-md-8 col-sm-4 col-xs-2">
                                    <div class="row justify-content-end item">
                                        <div class="col-md-4">
                                            <h5 class="desc">@product.title by @product.brand</h5>
                                            <h5>@product.price LKR</h5>
                                        </div>
                                        <div class="col-md-4">
                                            <h5 class="desc">Quantity</h5>
                                            <h5>@product.count</h5>
                                        </div>
                                        <div class="col-md-4">
                                            <h5 class="desc">Total</h5>
                                            <h5>@subTotal LKR</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    }
                }

                <div class="row">

                    <div class="col-4">
                        <span>Total: @total LKR</span>
                        <button type="button" class="btn-primary">Checkout</button>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>