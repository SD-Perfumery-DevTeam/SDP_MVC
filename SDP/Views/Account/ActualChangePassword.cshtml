@{
}
@model SDP.ViewModels.PasswordChange
<section>
    <div class="container">
        <form class="form-small" method="post">
            @Html.AntiForgeryToken()
            <h3>Sign Up</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
          
            <input type="hidden" asp-for="token" id="username" value=@Model.token />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="username" value=@Model.Email/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" id="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReenterPassword"></label>
                <input asp-for="ReenterPassword" class="form-control" />
                <span asp-validation-for="ReenterPassword" id="confirm-password"></span>
            </div>
            <button class="btn-big sdp-style" type="submit">Sign me up!</button>

            <small><a href="#">I already have an account..</a></small>
        </form>
    </div>
</section>