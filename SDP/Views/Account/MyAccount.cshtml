@model Microsoft.AspNetCore.Identity.IdentityUser

<section id="section-cms">
    <div class="container">
        @await Html.PartialAsync("_AdminLinks")
        <section class="cms-area">
            <h2>@ViewData["Error MSG"]</h2>

            <label>Email</label>
            <h4>@Model.Email</h4>
            <br />
            <label>ID</label>
            <h4>@Model.Id</h4>
            <br />
            <form asp-action="DeleteMyAccount" asp-controller="Account" method="post">
                <Button class="btn btn-danger" name="Id" value="@Model.Id" type="submit">Delete Account</Button>
            </form>
        </section>
    </div>
</section>