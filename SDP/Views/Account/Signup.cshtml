@{
    ViewData["Title"] = "Sign Up";
}

@model SDP.ViewModels.SignupView
<!-- Sign Up Form ========================================================= -->

<div class="container">
    <section id="section-banner">
        <h2>Sign up for exclusive deals</h2>
        <p>Join us and take advantage of our enhanced experience for regular customers.</p>
    </section>
</div>
<section>
    <div class="container">
        <form class="form-small" method="post">
            @Html.AntiForgeryToken()
            <h3>Sign Up</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="username" maxlength="256" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" id="password" />
            </div>
            <div class="form-group">
                <label asp-for="ReenterPassword"></label>
                <input asp-for="ReenterPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="opIn"></label>
                <input asp-for="opIn" />
            </div>
            <button class="btn-big sdp-style" type="submit">Sign me up!</button>
            <small><a href="#">I already have an account..</a></small>
        </form>
    </div>
</section>
